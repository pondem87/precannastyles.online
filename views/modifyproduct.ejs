<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>precanna styles admin</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/all.css">
    <link rel="stylesheet" href="css/nice-select.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/slick.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/price_rangs.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="bg-white">
  <!--::header part start::-->
  <header class="main_menu home_menu">
      <div class="container-fluid">
          <div class="row align-items-center justify-content-center">
              <div class="col-lg-11">
                  <nav class="navbar navbar-expand-lg navbar-light">
                      <a class="navbar-brand" href="home"> <img src="img/logo.png" alt="logo"> </a>
                      <button class="navbar-toggler" type="button" data-toggle="collapse"
                          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                          aria-expanded="false" aria-label="Toggle navigation">
                          <span class="menu_icon"><i class="fas fa-bars"></i></span>
                      </button>
                  </nav>
              </div>
          </div>
      </div>

  </header>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
      <div class="container">
          <div class="row justify-content-center">
              <div class="col-lg-12">
                  <div class="breadcrumb_iner">
                      <div class="breadcrumb_iner_item">
                          <p>Welcome, Admin</p>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
  <!-- breadcrumb start-->
  <section class="login_part section_padding">
      <div class="container">
          <div class="row align-items-center">
              <div class="col-lg-6 col-md-6">
                <h3>Edit product information</h3>
                <h5>Product code: <%= product.code %> (unchangeable), name: <%= product.name %></h5>
                <form id="updateproduct" method="POST" action="updateproduct">
                  <input type="hidden" name="code" value="<%= product.code %>">
                  <div class="col-md-12 form-group p-star">
                    <label>Product name:</label>
                    <input type="text" class="form-control" name="name" value="<%= product.name %>"
                        placeholder="Product display name" required>
                  </div>
                  <div class="col-12 form-group">
                    <label>Product summary:</label>
                    <textarea class="form-control w-100" name="summary" type="text" cols="30" rows="3"
                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Summary (short description of product)'"
                      placeholder='Summary (short description of product)' required><%= product.summary %></textarea>
                  </div>
                  <div class="col-12 form-group">
                    <label>Product description:</label>
                    <textarea class="form-control w-100" name="description" type="text" cols="30" rows="6"
                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Description (comprehensive description of product)'"
                      placeholder='Description (comprehensive description of product)' required><%= product.description %></textarea>
                  </div>
                  <div class="col-md-12 form-group p-star">
                    <label>Product price:</label>
                    <input class="form-control" name="price" type="number"  name="price" step="0.01" value="<%= product.price %>"
                        placeholder="Price (Pula)" required>
                  </div>
                  <div class="col-md-12 form-group p-star">
                    <label>Product discount:</label>
                    <input class="form-control" name="discount" type="number"  name="discount" step="0.01" min="0" max="1"
                        placeholder="Discount (as a fraction of price)" value="<%= product.discount %>" required>
                  </div>

                  <div class="col-md-12 form-group p-star">
        							<div class="form-select" id="default-select">
        								<select name="subcategory" form="updateproduct">
                          <% category.forEach((cat) => {
                            cat.subcategory.forEach((subcategory) => { %>
                              <option value="<%= subcategory.id %>" <% if (subcategory.id == product.subcategory_id) {%>selected<%} %> ><%= subcategory.name %></option>
                            <% });
                          }); %>
        								</select>
        							</div>
    						  </div>
                  <div class="col-md-12 form-group p-star">
        							<div class="form-select" id="default-select">
        								<select name="available" form="updateproduct">
                              <option value="1" <% if (product.available > 0) { %>selected<% } %> >Display product in shop</option>
                              <option value="0" <% if (product.available == 0) { %>selected<% } %> >Do not display in shop</option>
        								</select>
        							</div>
    						  </div>
                  <div style="text-align: center;">
                  <button type="submit" class="btn_3">save changes</button>
                  </div>
                </form>
                <div style="margin-top: 10px; text-align: center;">
                  <a href="uploadphotos?code=<%= product.code %>" class="btn_3">upload photos</a>
                  <a href="delphotos?code=<%= product.code %>" class="btn_3">delete photos</a>
                </div>
              </div>
          </div>
      </div>
  </section>

  <!-- include jquery plugins -->
  <%- include ('include/jqueryplugins') %>

</body>

</html>
