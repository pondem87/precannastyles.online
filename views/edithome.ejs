<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>precanna styles admin</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/all.css">
    <link rel="stylesheet" href="css/nice-select.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/slick.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/price_rangs.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="bg-white">
  <!--::header part start::-->
  <header class="main_menu home_menu">
      <div class="container-fluid">
          <div class="row align-items-center justify-content-center">
              <div class="col-lg-11">
                  <nav class="navbar navbar-expand-lg navbar-light">
                      <a class="navbar-brand" href="home"> <img src="img/logo.png" alt="logo"> </a>
                      <button class="navbar-toggler" type="button" data-toggle="collapse"
                          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                          aria-expanded="false" aria-label="Toggle navigation">
                          <span class="menu_icon"><i class="fas fa-bars"></i></span>
                      </button>
                  </nav>
              </div>
          </div>
      </div>

  </header>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
      <div class="container">
          <div class="row justify-content-center">
              <div class="col-lg-12">
                  <div class="breadcrumb_iner">
                      <div class="breadcrumb_iner_item">
                          <p>Welcome, Admin</p>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
  <!-- breadcrumb end-->

  <section class = "section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
              <h3>Change how the home page looks</h3>
              <h4>Messages:</h4>
              <div class="headline">
                <h5>Headline: <span class="old_headline"><%= home.banner.h1_text %></span></h5>
                  <div class="col-md-12 form-group p-star">
                    <input type="text" class="form-control new_headline" placeholder="type new headline">
                  </div>
              </div>
              <div class="tagline">
                <h5>Tagline: <span class="old_tagline"><%= home.banner.h5_text %></span></h5>
                  <div class="col-md-12 form-group p-star">
                    <input type="text" class="form-control new_tagline" placeholder="type new tagline">
                  </div>
              </div>
              <h4>Features</h4>
              <p>Select a product for each feature and set text for the feature button.<br />
                The button will redirect user to the category of the feature item. Make sure you
                provide a code for an exixting product or risk crashing the server...</p>
              <% home.features.forEach((feature) => { %>
                <div class="feature" style="border: 1px solid grey; border-radius: 5px; padding: 10px; margin: 5px;">
                  <h5>Product Code: <span class="product_code"><%= feature.product %></span></h5>
                    <div class="col-md-12 form-group p-star">
                      <input type="text" class="form-control new_product_code" value="" placeholder="type new product code">
                    </div>
                  <h5>Button Text: <span class="feature_label"><%= feature.feature_label %></span></h5>
                    <div class="col-md-12 form-group p-star">
                      <input type="text" class="form-control new_feature_label" value="" placeholder="type new botton text">
                    </div>
                </div>
              <% }); %>
            </div>

            <div class="col-lg-6 col-md-6">
              <h4>New arrivals:</h4>
              <p>Make sure all product codes you enter exist in products database</p>
              <% home.new_arrivals.forEach((arrival) => { %>
                <div class="new_arrivals" style="border: 1px solid grey; border-radius: 5px; padding: 10px; margin: 5px;">
                  <h5>Product Code: <span class="product_code"><%= arrival %></span></h5>
                    <div class="col-md-12 form-group p-star">
                      <input type="text" class="form-control new_product_code" value="" placeholder="type new product code">
                    </div>
                </div>
              <% }); %>
              <div>
                <button id="save_home" class="btn_3">save changes</button>
              </div>
              <div>
                <a href="/admin">Go to Admin home</a>
              </div>
            </div>
        </div>
    </div>
  </section>

  <!-- include jquery plugins -->
  <%- include ('include/jqueryplugins') %>

</body>
</html>
