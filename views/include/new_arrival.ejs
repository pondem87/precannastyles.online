<!-- new arrival part here -->
    <section class="new_arrival section_padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="arrival_tittle">
                        <h2>new arrival</h2>
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="new_arrival_iner filter-container">
                        <% home.new_arrivals.forEach((item, i) => {
                          item.img = JSON.parse(item.img); %>

                        <div class="single_arrivel_item weidth_3 mix">
                            <img src="<%= static_root_url.product_img + item.img_dir + item.img[0] %>" alt="#">
                            <div class="hover_text">
                                <p>precanna styles</p>
                                <a href="/product?code=<%= item.code %>"><h3><%= item.name %></h3></a>
                                <div class="rate_icon">
                                  <% for (var i=0; i < item.rating; i++) { %>
                                    <a href="#"> <i class="fas fa-star"></i> </a>
                                  <% } %>
                                </div>
                                <h5>
                                  <% if (item.discount === 0) { %>
                                    <%= currency.symbol + item.price %>
                                  <% } else { %>
                                    now <%= currency.symbol + ((item.price - (item.price * item.discount)) * currency.multiplier).toFixed(2) %> <span style="color:red;" >was <%= currency.symbol + (item.price * currency.multiplier) %></span>
                                  <% } %>
                                </h5>
                                <div class="social_icon">
                                    <a href="addtofavourite?code=<%= item.code %>"><i class="ti-heart"></i></a>
                                    <a href="product?code=<%= item.code %>"><i class="ti-bag"></i></a>
                                </div>
                            </div>
                        </div>

                        <% }); %>

                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- new arrival part end -->
