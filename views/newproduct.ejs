<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>precanna styles admin</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/all.css">
    <link rel="stylesheet" href="css/nice-select.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/slick.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="css/price_rangs.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="bg-white">
  <!--::header part start::-->
  <header class="main_menu home_menu">
      <div class="container-fluid">
          <div class="row align-items-center justify-content-center">
              <div class="col-lg-11">
                  <nav class="navbar navbar-expand-lg navbar-light">
                      <a class="navbar-brand" href="home"> <img src="img/logo.png" alt="logo"> </a>
                      <button class="navbar-toggler" type="button" data-toggle="collapse"
                          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                          aria-expanded="false" aria-label="Toggle navigation">
                          <span class="menu_icon"><i class="fas fa-bars"></i></span>
                      </button>
                  </nav>
              </div>
          </div>
      </div>

  </header>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
      <div class="container">
          <div class="row justify-content-center">
              <div class="col-lg-12">
                  <div class="breadcrumb_iner">
                      <div class="breadcrumb_iner_item">
                          <p>Welcome, Admin</p>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
  <!-- breadcrumb start-->
  <section class="login_part section_padding">
      <div class="container">
          <div class="row align-items-center">
              <div class="col-lg-6 col-md-6">
                <h3>Add a product</h3>
                <form id="new_product" class="row contact_form" action="addproduct" method="POST" >
                  <div class="col-md-12 form-group p-star">
                    <input type="text" class="form-control" name="name" value=""
                        placeholder="Product display name" required>
                  </div>
                  <div class="col-12 form-group">
                    <textarea class="form-control w-100" name="summary" type="text" cols="30" rows="3"
                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Summary (short description of product)'"
                      placeholder='Summary (short description of product)' required></textarea>
                  </div>
                  <div class="col-12 form-group">
                    <textarea class="form-control w-100" name="description" type="text" cols="30" rows="6"
                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Description (comprehensive description of product)'"
                      placeholder='Description (comprehensive description of product)' required></textarea>
                  </div>
                  <div class="col-md-12 form-group p-star">
                    <input class="form-control" name="price" type="number"  name="price" step="0.01"
                        placeholder="Price (Pula)" required>
                  </div>
                  <div class="col-md-12 form-group p-star">
                    <input class="form-control" name="discount" type="number"  name="discount" step="0.05" min="0" max="1"
                        placeholder="Discount (as a fraction of price)" required>
                  </div>

                  <div class="col-md-12 form-group p-star">
        							<div class="form-select" id="default-select">
        								<select name="subcategory" form="new_product">
                          <% category.forEach((cat) => {
                            cat.subcategory.forEach((subcategory) => { %>
                              <option value="<%= subcategory.id %>"><%= subcategory.name %></option>
                            <% });
                          }); %>
        								</select>
        							</div>
    						  </div>
                  <div class="col-md-12 form-group">
                      <button type="submit" value="submit" class="btn_3">done</button>
                  </div>
                </form>
              </div>
          </div>
      </div>
  </section>

  <!-- include jquery plugins -->
  <%- include ('include/jqueryplugins') %>

</body>

</html>
